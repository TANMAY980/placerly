  <div class="forgot-container">
    <div class="content-body">
            <div class="card">
              <!-- Card Body -->
              <div class="card-body">
                <div class="row w-100 align-items-center">

                      <div class="col-md-8">
      <div class="d-flex flex-column">

        <p class="fw-bold mb-1">Registered On: <%= response?.createdAt || "NA" %></p>
        <p class="fw-bold mb-1">First Name: <%= response?.firstName || "NA" %></p>
        <p class="fw-bold mb-1">Last Name: <%= response?.lastName || "NA" %></p>
        <p class="fw-bold mb-1">Email Address: <%= response?.email || "NA" %></p>
        <p class="fw-bold mb-1">Contact Number: <%= response?.contactNumber || "NA" %></p>

        <p class="fw-bold mb-1">
          All Subscription:
          <% if(response?.subscription?.length) { %>
            <% response.subscription.forEach(sub => { %>
              <span class="badge badge-info">
                <%= sub.name %> - <%= sub.orgName %>
              </span>
            <% }) %>
          <% } else { %>
            NA
          <% } %>
        </p>

        <p class="fw-bold mb-1">
          Status:
          <% const statusClass = {
            active: "badge-light-success",
            inactive: "badge-light-secondary",
            banned: "badge-light-danger"
          }[response?.status] || "badge-light-secondary"; %>
          <span class="badge <%= statusClass %>"><%= response?.status %></span>
        </p>

        <p class="fw-bold mb-1">
          Subscription:
          <% const subClass = response?.subscribed === "subscribed"
            ? "badge-light-success" : "badge-light-warning"; %>
          <span class="badge <%= subClass %>"><%= response?.subscribed %></span>
        </p>

        <p class="fw-bold mb-1">
          Verify Status:
          <% const verifyClass = response?.is_verified ? "badge-light-success" : "badge-light-danger"; %>
          <span class="badge <%= verifyClass %>">
            <%= response?.is_verified ? "Verified" : "Not Verified" %>
          </span>
        </p>

      </div>
    </div>

    <div class="col-md-4 d-flex flex-column align-items-center">
        <div class="profile-upload-box">
            <img src="<%= response?.image || '/uploads/default-user.png' %>" id="previewImage" class="profile-big-img"
                alt="Profile Image">
            <form action="<%= generateUrl('upload.image') %>" method="POST" enctype="multipart/form-data"
                class="upload-form">
                <label for="uploadImage" class="upload-overlay" title="Upload Image">
                    <i class="fas fa-camera"></i>
                </label>
        
                <input type="file" id="uploadImage" name="image" accept="image/*" hidden onchange="previewProfile(this)">
            </form>
        
            <% if(response?.image) { %>
                <form action="<%= generateUrl('user.profileimage.delete') %>" method="POST" class="delete-form">
                    <button type="submit" class="delete-overlay" title="Delete Image">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
                <% } %>
        
        </div>
    
        <h5 class="mt-2">
            <%= user.name %>
        </h5>
    
    </div>
    </div>
    </div>
    </div>
    </div>

</div>
