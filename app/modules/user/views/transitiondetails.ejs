<script>

  /* MASTER GRAPH */
  const masterCtx = document.getElementById('masterChart');
  new Chart(masterCtx, {
    type: 'line',
    data: {
      labels: ['Jan','Feb','Mar','Apr','May','Jun'],
      datasets: [
        {
          label: 'Cash',
          data: [200000, 240000, 280000, 320000, 360000, 400000],
          borderColor: '#0d6efd',
          fill: false
        },
        {
          label: 'Stock',
          data: [150000, 180000, 210000, 260000, 300000, 350000],
          borderColor: '#198754',
          fill: false
        }
      ]
    },
    options: {
      responsive: true,
      plugins: {
        legend: { position: 'top' }
      }
    }
  });


  /* PIE CHART */
  const pieCtx = document.getElementById('pieChart');
  new Chart(pieCtx, {
    type: 'pie',
    data: {
      labels: ['Cash', 'Stock'],
      datasets: [{
        data: [400000, 350000],
