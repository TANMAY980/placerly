}
.bg-light-primary {
  background-color: rgba(115, 103, 240, 0.2);
}

.bg-light-success {
  background-color: rgba(40, 199, 111, 0.2);
}

.bg-light-danger {
  background-color: rgba(234, 84, 85, 0.2);
}

.bg-light-warning {
  background-color: rgba(255, 159, 67, 0.2);
}
h3.fw-bolder {
  font-size: 2rem;
  color: #333;
  margin-bottom: 0.5rem;
}

    

    
  </style>

</body>

</html>