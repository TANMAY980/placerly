<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>
    <%= page_title %>
  </title>

  <!-- jQuery -->
  <script src="/plugins/jquery/jquery.min.js"></script>
  <!-- Moment + DataTables -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.3.6/js/dataTables.buttons.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Google Font -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css">
  <!-- Ionicons -->
  <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
  <!-- Tempusdominus Bootstrap 4 -->
  <link rel="stylesheet" href="/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
  <!-- iCheck -->
  <link rel="stylesheet" href="/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- JQVMap -->
  <link rel="stylesheet" href="/plugins/jqvmap/jqvmap.min.css">
  <!-- overlayScrollbars -->
  <link rel="stylesheet" href="/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
  <!-- Daterange picker -->
  <link rel="stylesheet" href="/plugins/daterangepicker/daterangepicker.css">
  <!-- summernote -->
  <link rel="stylesheet" href="/plugins/summernote/summernote-bs4.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="/dist/css/adminlte.min.css">
  <!----Faq list page style-->
  <link rel="stylesheet" href="/app-assets/css/pages/userdetails.css">
  <!----loader style-->
  <link rel="stylesheet" href="/app-assets/css/pages/loader.css">
  <!-- DataTables CSS -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>


</head>

<body class="hold-transition sidebar-mini layout-fixed">
  <div class="wrapper">

    <!-- Preloader -->
    <div class="preloader flex-column justify-content-center align-items-center">
      <img class="animation__shake" src="/dist/img/coin.gif" alt="AdminLTELogo" height="60" width="60">
    </div>

    <!-- Navbar -->
    <%- include('../views/adminpartials/navbar') %>

      <!-- Main Sidebar -->
      <%- include('../views/adminpartials/sidebar') %>

        <!-- Content Wrapper -->
        <div class="content-wrapper">
          <div class="d-flex justify-content-center">
          <div style="width: 300px">
            <!-- Display success message if available -->
            <% if (successMessage.length> 0) { %>
              <div class="toast-message toast-success">
                <span>
                  <%= successMessage[0] %>
                </span>
                <button onclick="this.parentElement.remove()"><i class="fas fa-times"></i></button>
              </div>
              <% } %>
            
                <% if (errorMessage.length> 0) { %>
                  <div class="toast-message toast-error">
                    <span>
                      <%= errorMessage[0] %>
                    </span>
                    <button onclick="this.parentElement.remove()">✖</button>
                  </div>
                  <% } %>

          </div>
          </div>
          <!-- Content Header -->
          <div class="content-header">
            <div class="container-fluid">
              <div class="row mb-2">
                <div class="col-sm-6">
                  <h1 class="m-0"><%=page_title%></h1>
                </div>
              </div>
            </div>
          </div>

          <!-- Main content -->
          <div class="container">
            <section class="app-user-list">
              <div class="row">
                <!-- Card 1 -->
                <div class="col-lg-3 col-sm-6">
                  <div class="card">
                    <div class="card-body d-flex align-items-center justify-content-between">
                      <div>
                        <h3 class="fw-bolder mb-75" id="totalUsers">
                          <%= stats.total %>
                        </h3>
                        <span>Total Registered Users</span>
                      </div>
                      <div class="avatar bg-light-primary p-50">
                        <span class="avatar-content"><i data-feather="user"></i></span>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Card 2 -->
                <div class="col-lg-3 col-sm-6">
                  <div class="card">
                    <div class="card-body d-flex align-items-center justify-content-between">
                      <div>
                        <h3 class="fw-bolder mb-75" id="activeUsers">
                          <%= stats.active %>
                        </h3>
                        <span>Total Active Users</span>
                      </div>
                      <div class="avatar bg-light-success p-50">
                        <span class="avatar-content"><i data-feather="user-check"></i></span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                  <div class="card">
                    <div class="card-body d-flex align-items-center justify-content-between">
                      <div>
                        <h3 class="fw-bolder mb-75" id="activeUsers">
                          <%= stats.inactive %>
                        </h3>
                        <span>Total InActive Users</span>
                      </div>
                      <div class="avatar bg-light-success p-50">
                        <span class="avatar-content"><i data-feather="user-check"></i></span>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Card 3 -->
                <div class="col-lg-3 col-sm-6">
                  <div class="card">
                    <div class="card-body d-flex align-items-center justify-content-between">
                      <div>
                        <h3 class="fw-bolder mb-75" id="bannedUsers">
                          <%= stats.banned %>
                        </h3>
                        <span>Total Banned Users</span>
                      </div>
                      <div class="avatar bg-light-danger p-50">
                        <span class="avatar-content"><i data-feather="user-x"></i></span>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Card 4 -->
                <div class="col-lg-3 col-sm-6">
                  <div class="card">
                    <div class="card-body d-flex align-items-center justify-content-between">
                      <div>
                        <h3 class="fw-bolder mb-75" id="subscribedUsers">
                          <%= stats.subscribed %>
                        </h3>
                        <span>Total Subscribed Users</span>
                      </div>
                      <div class="avatar bg-light-warning p-50">
                        <span class="avatar-content"><i data-feather="user-plus"></i></span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                  <div class="card">
                    <div class="card-body d-flex align-items-center justify-content-between">
                      <div>
                        <h3 class="fw-bolder mb-75" id="unsubscribedUsers">
                          <%= stats.unsubscribed %>
                        </h3>
                        <span>Total UnSubscribed Users</span>
                      </div>
                      <div class="avatar bg-light-warning p-50">
                        <span class="avatar-content"><i data-feather="user-plus"></i></span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                  <div class="card">
                    <div class="card-body d-flex align-items-center justify-content-between">
                      <div>
                        <h3 class="fw-bolder mb-75" id="activeUsers">
                          <%= stats.active %>
                        </h3>
                        <span>Total Verified Users</span>
                      </div>
                      <div class="avatar bg-light-success p-50">
                        <span class="avatar-content"><i data-feather="user-check"></i></span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                  <div class="card">
                    <div class="card-body d-flex align-items-center justify-content-between">
                      <div>
                        <h3 class="fw-bolder mb-75" id="activeUsers">
                          <%= stats.inactive %>
                        </h3>
                        <span>Total Unverified Users</span>
                      </div>
                      <div class="avatar bg-light-success p-50">
                        <span class="avatar-content"><i data-feather="user-check"></i></span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Filter + Table -->
              <div class="card">
                <div class="card-body border-bottom">
                  <div class="row">
                    <div class="col-md-4 user_status">
                      <select id="StatusDropdown" class="form-select text-capitalize mb-md-0 mb-2xx cursor-pointer">
                        <option value="">View All Status</option>
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                        <option value="banned">Banned</option>
                        <option value="true">Subscribed</option>
                        <option value="false">Unsubscribed</option>
                      </select>
                    </div>
                  </div>
                </div>

                <div class="card-datatable table-responsive pt-0 position-relative">
                  <div id="loader">
                    <img src="/dist/img/coin.gif" alt="Loading..." />
                  </div>
                  <table class="user-list-table table">
                    <thead class="table-light">
                      <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Registered On</th>
                        <th>Contact No</th>
                        <th>Subscribed</th>
                        <th>Status</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      
                    </tbody>
                    <tfoot class="table-light">
                      <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Registered On</th>
                        <th>Contact No</th>
                        <th>Subscribed</th>
                        <th>Status</th>
                        <th>Actions</th>
                      </tr>
                    </tfoot>
                  </table>
                </div>

                <div class="modal fade" id="subscriptionModal" tabindex="-1" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-header bg-info">
                        <h5 class="modal-title">Change Subscription Status</h5>
                        <button type="button" class="btn-close btn-danger " data-dismiss="modal">×</button>
                      </div>
                      <div class="modal-body text-center">
                        <input type="hidden" id="subscriptionUserId">
                        <label for="subscriptionSelect" class="fw-bold mb-2">Select Subscription</label>
                        <select id="subscriptionSelect" class="form-select w-75 mx-auto">
                          <option value="true">Subscribed</option>
                          <option value="false">Unsubscribed</option>
                        </select>
                      </div>
                      <div class="modal-footer justify-content-center">
                        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button id="confirmSubscriptionChange" class="btn btn-primary text-white">Confirm</button>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="modal fade" id="statusModal" tabindex="-1" aria-hidden="true">
                  <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                      <div class="modal-header  text-danger">
                        <h5 class="modal-title">Change User Status</h5>
                        <button type="button" class="close btn btn-danger" data-dismiss="modal" aria-label="Close">×
                      </button>
                      </div>
                      <div class="modal-body text-center">
                        <input type="hidden" id="selectedUserId">
                        <label for="statusSelect" class="fw-bold mb-2">Select New Status</label>
                        <select id="statusSelect" class="form-select w-75 mx-auto">
                          <option value="active">Active</option>
                          <option value="inactive">Inactive</option>
                          <option value="banned">Banned</option>
                        </select>
                      </div>
                      <div class="modal-footer justify-content-center">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button id="confirmStatusChange" class="btn btn-primary">Confirm</button>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="modal fade" id="filters-modal" tabindex="-1" aria-labelledby="filterModalLabel"
                  aria-hidden="true">
                  <div class="modal-dialog">
                    <form class="modal-content pt-0" id="filter_user_form">
                      <div class="modal-header">
                        <h5 class="modal-title">Filter Users By Date</h5>
                        <button type="button" class="close btn btn-danger" data-dismiss="modal" aria-label="Close">×
                      </button>
                      </div>
                      <div class="modal-body flex-grow-1">
                        <div class="mb-1">
                          <label class="form-label">Select Date Range</label>
                          <input type="text" id="user-range2" class="form-control flatpickr-range"
                            placeholder="Select Date Range" autocomplete="off" />
                        </div>

                        <div class="d-flex justify-content-between gap-1 mt-2">
                          <button type="button" class="btn btn-danger" id="filter_user_reset_btn"
                            data-bs-dismiss="modal">
                            Reset
                          </button>
                          <button type="button" class="btn btn-primary" id="filter_user_btn" data-bs-dismiss="modal">
                            Apply Filter
                          </button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>

                <div class="modal modal-slide-in fade" id="editUserModal" tabindex="-1" aria-hidden="true">
                  <div class="modal-dialog">
                    <form class="modal-content pt-0" id="editUserForm">
                      <div class="modal-header">
                        <h5 class="modal-title">Edit User Details</h5>
                        <button type="button" class="close btn btn-danger" data-dismiss="modal" aria-label="Close">×
                      </button>
                      </div>
                      
                      <div class="modal-body flex-grow-1">
                        <input type="hidden" id="editUserId">
                        <div class="mb-1">
                          <label class="form-label">First Name</label>
                          <input type="text" class="form-control" id="FirstName" placeholder="Enter first name"
                            required>
                        </div>

                        <div class="mb-1">
                          <label class="form-label">Last Name</label>
                          <input type="text" class="form-control" id="LastName" placeholder="Enter last name" required>
                        </div>

                        <div class="mb-1">
                          <label class="form-label">Email</label>
                          <input type="email" class="form-control" id="editEmail" disabled>
                        </div>

                        <div class="mb-1">
                          <label class="form-label">Contact Number</label>
                          <input type="text" class="form-control" id="editContactNumber"
                            placeholder="Enter contact number" required>
                        </div>

                        <div class="mb-1">
                          <label class="form-label">Status</label>
                          <select class="form-select" id="editStatus">
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                            <option value="banned">Banned</option>
                          </select>
                        </div>

                        <!-- Verified -->
                        <div class="mb-1">
                          <label class="form-label">Verified Status</label>
                          <select class="form-select" id="editVerified">
                            <option value="true">Verified</option>
                            <option value="false">Not Verified</option>
                          </select>
                        </div>

                        <!-- Subscription -->
                        <div class="mb-2">
                          <label class="form-label">Subscription</label>
                          <select class="form-select" id="editSubscribed">
                            <option value="true">Subscribed</option>
                            <option value="false">Unsubscribed</option>
                          </select>
                        </div>

                        <!-- Buttons -->
                        <div class="modal-footer d-flex justify-content-between">
                          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                          <button id="saveUserChanges" type="button" class="btn btn-primary">Update</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </div>

        <!-- Footer -->
        <%- include('../views/adminpartials/footer') %>

          <!-- Control Sidebar -->
          <aside class="control-sidebar control-sidebar-dark"></aside>
  </div>

  <!-- JS Libraries -->
  <script src="/plugins/jquery-ui/jquery-ui.min.js"></script>
  <script>
    $.widget.bridge('uibutton', $.ui.button);
  </script>
  <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/plugins/chart.js/Chart.min.js"></script>
  <script src="/plugins/sparklines/sparkline.js"></script>
  <script src="/plugins/jqvmap/jquery.vmap.min.js"></script>
  <script src="/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
  <script src="/plugins/jquery-knob/jquery.knob.min.js"></script>
  <script src="/plugins/daterangepicker/daterangepicker.js"></script>
  <script src="/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
  <script src="/plugins/summernote/summernote-bs4.min.js"></script>
  <script src="/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
  <script src="/dist/js/adminlte.js"></script>
  <script src="/dist/js/demo.js"></script>
  <script src="/dist/js/pages/dashboard.js"></script>

  <!-- Feather Icons -->
  <script src="https://unpkg.com/feather-icons"></script>
  <script> feather.replace(); </script>

  <!-- Datatable JS -->
  <script src="/js/datatables/app-user-list.js"></script>

  <!---Flash Js-->
  <script src="/js/flash.js"></script>
  

</body>

</html>